<Window x:Class="UniDeb.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adatbázis csatlakozás" Height="228.357" Width="430.348" ResizeMode="NoResize" Background="#FFD4D0C8">
    <Grid>
        <Image HorizontalAlignment="Left" Height="84" VerticalAlignment="Top" Width="225" Source="/Images/dirt.png" Margin="57,78,0,0" />
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label Content="Adatbázis szerver URL: " Width="150" />
                <TextBox x:Name="TxtbxUrl" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Felhasználónév: " Width="150" />
                <TextBox x:Name="TxtbxUsername" Width="250" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Jelszó: " Width="150" />
                <TextBox x:Name="TxtbxPassword" Width="250" />
            </StackPanel>
            <Button x:Name="send" Content="Beállít" Margin="10,70,10,10" Click="send_Click"/>
        </StackPanel>

    </Grid>
</Window>
