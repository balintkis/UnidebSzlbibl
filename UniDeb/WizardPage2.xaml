                </StackPanel>


                <StackPanel Orientation="Horizontal">
                    <Label Content="Változatlan kiadása:" Width="150" />
                    <TextBox x:Name="Txtbx2_1_9" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Újraközlése:" Width="150" />
                    <TextBox x:Name="Txtbx2_1_10" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Első kiadása:" Width="150" />
                    <TextBox x:Name="Txtbx2_1_11" Width="400"/>
