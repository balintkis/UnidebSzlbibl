<Window x:Class="UniDeb.WizardPage3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szlengbibliográfia" Height="650" Width="900">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="2. Megjelenés:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_1" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="3. Használat helye:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_2" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="4. Használat éve:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_3" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="5. Szlengtípus:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_4" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="6. Mely nyelv szlengje:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_5" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="7. Publikáció fajtája:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_6" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="8. Az adatközlés formája:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_7" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="9. Publikáció témája:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_8" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="10. Publikáció célja:" Width="150"  />
                    <TextBox x:Name="Txtbx3_1_9" Width="400" />
                </StackPanel>
                <Button x:Name="BtnPreview" Content="Előnézet" Margin="15,250,15,15" Click="BtnPreview_Click"/>
                <Button x:Name="BtnHTMLPreview" Content="HTML előnézet" Margin="15,0,15,15" Click="BtnHTMLPreview_Click"/>
                <Button x:Name="BtnUpload" Content="Feltöltés" Margin="15,0,15,15"/>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtbxPreview" AcceptsReturn="True" TextWrapping="Wrap" Width="350" />
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>

    